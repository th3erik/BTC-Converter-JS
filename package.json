{
  "name": "btc-converter",
  "version": "1.0.0",
  "description": "A CLI to convert Bitcoin to any currency provided.",
  "main": "index.js",
  "scripts": {
    "clear": "rimraf bin",
    "build": "npm run clear && ./node_modules/.bin/babel --out-dir bin src",
    "build:watch": "npm run build -- --watch",
    "lint": "./node_modules/.bin/eslint src/*.js",
    "prepush": "npm run lint",
    "test": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register --require babel-polyfill",
    "test:tdd": "npm run test -- --watch",
    "test:coverage": "nyc npm test"
  },
  "preferGlobal": true,
  "bin": {
    "btc-converter": "bin/main.js"
  },
  "nyc": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/erikhenriq/btc-converter.git"
  },
  "keywords": [
    "js",
    "tdd",
    "library"
  ],
  "author": "Erik Henrique <erik.hac@outlook.com> (https://deverik.netlify.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/erikhenriq/btc-converter/issues"
  },
  "homepage": "https://github.com/erikhenriq/btc-converter#readme",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-env": "^1.3.2",
    "babel-register": "^6.24.0",
    "chai": "^3.5.0",
    "eslint": "^4.0.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.6.1",
    "husky": "^0.11.9",
    "mocha": "^10.1.0",
    "nock": "^11.3.5",
    "nyc": "^14.1.1",
    "rimraf": "^2.6.1",
    "sinon": "^7.4.2",
    "sinon-chai": "^3.3.0"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "commander": "^3.0.1",
    "ora": "^3.4.0",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7"
  }
}
